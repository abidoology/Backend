# ============================================
# Environment Variables Configuration
# ============================================
# Copy this file to .env.local for local development
# Keep .env.example in version control without sensitive data
# ============================================

# ============================================
# Node Environment
# ============================================
NODE_ENV=development
# Options: development, production, testing

# ============================================
# Server Configuration
# ============================================
PORT=3000
HOST=localhost
# API Base URL
API_BASE_URL=http://localhost:3000

# ============================================
# Database Configuration (MongoDB Atlas)
# ============================================
# MongoDB Connection String
MONGODB_URI=mongodb+srv://abidsmuct_db_user:1234@cluster0.f0zincl.mongodb.net/?appName=Cluster0
# Alternatively, use individual components:
# DB_HOST=cluster0.f0zincl.mongodb.net
# DB_NAME=your_database_name
# DB_USER=abidsmuct_db_user
# DB_PASSWORD=1234

# ============================================
# Authentication & Security
# ============================================
# JWT Secret Key (change in production!)
JWT_SECRET=your-secret-key-change-in-production
JWT_SECRET_DEV=your-dev-secret-key-here
JWT_SECRET_PROD=your-prod-secret-key-here

# JWT Token Expiration
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d

# ============================================
# File Upload Configuration
# ============================================
# Maximum file size in MB
MAX_FILE_SIZE=5
# Upload directory
UPLOAD_DIR=uploads/
# Allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=http://localhost:3000
# For production, list specific domains:
# CORS_ORIGIN=https://example.com,https://app.example.com

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=debug
# Options: error, warn, info, debug
LOG_FILE=logs/app.log

# ============================================
# Email Configuration (Optional)
# ============================================
# EMAIL_SERVICE=gmail
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM=noreply@example.com

# ============================================
# Admin Configuration
# ============================================
ADMIN_EMAIL=admin@smuct.edu
DEFAULT_ADMIN_PASSWORD=admin123

# ============================================
# Rate Limiting (Optional)
# ============================================
# RATE_LIMIT_WINDOW=15
# RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Session Configuration (Optional)
# ============================================
# SESSION_SECRET=your-session-secret-key
# SESSION_TIMEOUT=3600000

# ============================================
# Application Settings
# ============================================
# App Name
APP_NAME=SMUCT Student Management System
# App Version
APP_VERSION=1.0.0
# Environment Description
ENVIRONMENT_DESC=Backend API for Student Management

# ============================================
# Testing Configuration (Optional)
# ============================================
# TEST_DB_URI=mongodb+srv://test_user:password@test-cluster.mongodb.net/test_db
# TEST_MODE=false
